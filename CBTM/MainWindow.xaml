<Window x:Class="CBTM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CRM - Управление мышью" Height="743" Width="500"
        Background="Black" Foreground="Gray"
        FontFamily="Segoe UI" FontSize="14"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- Стиль для ComboBox -->
        <Style x:Key="CustomComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                </Grid.ColumnDefinitions>

                                <!-- Выбранный элемент -->
                                <ContentPresenter x:Name="ContentSite" Content="{TemplateBinding SelectionBoxItem}" 
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" 
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" 
                                              Margin="6,3,25,3" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                                <!-- Кнопка стрелки -->
                                <ToggleButton x:Name="DropDownToggle" Grid.Column="1" 
                                          Background="Transparent" 
                                          BorderBrush="Transparent" 
                                          BorderThickness="0" 
                                          Focusable="False" 
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border Background="Transparent" Padding="5,0,5,0">
                                                            <Path x:Name="Arrow" Fill="White" Data="M 0 0 L 4 4 L 8 0 Z" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#007ACC"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
                            </Grid>

                            <!-- Выпадающий список -->
                            <Popup x:Name="PART_Popup" 
                               IsOpen="{TemplateBinding IsDropDownOpen}" 
                               Placement="Bottom" 
                               Focusable="False" 
                               AllowsTransparency="True" 
                               PopupAnimation="Slide">
                                <Border x:Name="DropDownBorder" 
                                    Background="#333" 
                                    BorderBrush="#555" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    MinWidth="{TemplateBinding ActualWidth}" 
                                    MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#444"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для элементов списка -->
        <Style x:Key="CustomComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для Expander -->
        <Style TargetType="Expander">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontWeight="SemiBold" FontSize="16" Foreground="White"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для CheckBox -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <!-- Стиль для Slider -->
        <Style TargetType="Slider">
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="IsSnapToTickEnabled" Value="True"/>
            <Setter Property="TickFrequency" Value="1"/>
            <Setter Property="AutoToolTipPlacement" Value="TopLeft"/>
            <Setter Property="Background" Value="#222"/>
        </Style>

        <!-- Стиль для TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <!-- Стиль для RadioButton -->
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <!-- Стиль для обычных кнопок -->
        <Style TargetType="Button" x:Key="DefaultButtonStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопок действий -->
        <Style x:Key="ActionButtonsStyle" TargetType="Button">
            <Setter Property="Background" Value="#444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#666"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для Label -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>

    <!-- Обертываем всё в DockPanel -->
    <DockPanel LastChildFill="True" Margin="10">

        <!-- Панель с кнопками внизу -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,10,0,0">

            <ComboBox x:Name="PortComboBox" Width="120" 
                      Style="{StaticResource CustomComboBoxStyle}" 
                      ItemContainerStyle="{StaticResource CustomComboBoxItemStyle}"  
                      Height="24" />

            <Button Content="Сбросить" x:Name="ResetButton" 
                    Style="{StaticResource ActionButtonsStyle}" 
                    ToolTip="Загрузить настройки с Arduino"/>

            <Button Content="Сохранить" x:Name="SaveButton" 
                    Style="{StaticResource ActionButtonsStyle}" 
                    ToolTip="Сохранить настройки на Arduino"/>

        </StackPanel>

        <!-- Основной прокручиваемый контент -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Раздел 1: Курсор -->
                <Expander Header="Курсор" IsExpanded="True">
                    <StackPanel>
                        <CheckBox Content="Инверсия по X" x:Name="InvertXCheckbox"/>
                        <CheckBox Content="Инверсия по Y" x:Name="InvertYCheckbox"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                            <Label Content="Сенсорная чувствительность:" Width="196"/>
                            <TextBox x:Name="SensitivityTextBox" Text="1" Width="54" 
                                     TextAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!-- Раздел 2: Подсветка -->
                <Expander Header="Подсветка" IsExpanded="True">
                    <StackPanel Height="248">
                        <Label Content="Яркость:"/>
                        <Slider x:Name="BrightnessSlider" Minimum="0" Maximum="100" 
                                Value="50" TickFrequency="1"/>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <RadioButton GroupName="LightMode" Name="Gradient" 
                                        Content="Градиент" IsChecked="True" Width="112"/>
                            <RadioButton GroupName="LightMode" Name="MonoColor" 
                                        Content="Моноцвет" IsChecked="False" Width="103"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="Цвет:" Width="60" 
                                   IsEnabled="{Binding ElementName=MonoColor, Path=IsChecked}"/>
                            <TextBox x:Name="ColorInputBox" Text="000.000.000" Width="114" 
                                     TextAlignment="Center" 
                                     IsEnabled="{Binding ElementName=MonoColor, Path=IsChecked}"/>
                        </StackPanel>

                        <Label Content="Скорость изменения градиента:" 
                               IsEnabled="{Binding ElementName=Gradient, Path=IsChecked}"/>
                        <Slider x:Name="SpeedG" Minimum="0" Maximum="100" 
                                Value="50" TickFrequency="1" 
                                IsEnabled="{Binding ElementName=Gradient, Path=IsChecked}" />
                    </StackPanel>
                </Expander>

                <!-- Раздел 3: Клавиши -->
                <Expander Header="Клавиши" IsExpanded="True">
                    <StackPanel>
                        <Button Content="Изменить пароль" x:Name="ChangePasswordButton" 
                                HorizontalAlignment="Left" 
                                Style="{StaticResource DefaultButtonStyle}" 
                                ToolTip="Изменить пароль для доступа к настройкам"/>

                        <Label Content="Настройка биндов клавиш:" Margin="0,15,0,5"/>

                        <!-- Клавиши M1-M9 -->
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="M1" Width="60" HorizontalAlignment="Left"/>
                            <TextBox x:Name="M1" Text="left click" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="M2" Width="60" HorizontalAlignment="Left"/>
                            <TextBox x:Name="M2" Text="right click" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="M3" Width="60" HorizontalAlignment="Left"/>
                            <TextBox x:Name="M3" Text="middle click" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="M4" Width="60" HorizontalAlignment="Left"/>
                            <TextBox x:Name="M4" Text="back" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="M5" Width="60" HorizontalAlignment="Left"/>
                            <TextBox x:Name="M5" Text="forward" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="M6" Width="60" HorizontalAlignment="Left"/>
                            <TextBox x:Name="M6" Text="Volume Up" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="M7" Width="60" HorizontalAlignment="Left"/>
                            <TextBox x:Name="M7" Text="Volume Down" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="M8" Width="60" HorizontalAlignment="Left"/>
                            <TextBox x:Name="M8" Text="Mute" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="M9" Width="60" HorizontalAlignment="Left"/>
                            <TextBox x:Name="M9" Text="Task View" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>

                    </StackPanel>
                </Expander>

            </StackPanel>
        </ScrollViewer>

    </DockPanel>
</Window>