<Window x:Class="CBTM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CRM" Height="743" Width="500"
        Background="Black" Foreground="Gray"
        FontFamily="Segoe UI" FontSize="14">

    <Window.Resources>
        <!-- Стиль для Expander -->
        <Style TargetType="Expander">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontWeight="SemiBold" FontSize="16" Foreground="White"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для CheckBox -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <!-- Стиль для Slider -->
        <Style TargetType="Slider">
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="IsSnapToTickEnabled" Value="True"/>
            <Setter Property="TickFrequency" Value="1"/>
            <Setter Property="AutoToolTipPlacement" Value="TopLeft"/>
            <Setter Property="Background" Value="#222"/>
            <Setter Property="Foreground" Value="#222"/>
        </Style>

        <!-- Стиль для TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <!-- Стиль для RadioButton -->
        <Style TargetType="RadioButton">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <!-- Стиль для обычных кнопок -->
        <Style TargetType="Button" x:Key="DefaultButtonStyle">
            <Setter Property="Background" Value="Lavender"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="DarkGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Отдельный стиль для кнопок "Сохранить" и "Сбросить" -->
        <Style x:Key="ActionButtonsStyle" TargetType="Button">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Gray"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="DarkGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для Label -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>

    <!-- Обертываем всё в DockPanel -->
    <DockPanel LastChildFill="True" Margin="10">

        <!-- Панель с кнопками внизу -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" x:Name="SaveButton" Style="{StaticResource ActionButtonsStyle}" />
            <Button Content="Сбросить" x:Name="ResetButton" Style="{StaticResource ActionButtonsStyle}" />
        </StackPanel>

        <!-- Основной прокручиваемый контент -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Раздел 1: Курсор -->
                <Expander Header="Курсор" IsExpanded="True">
                    <StackPanel>
                        <CheckBox Content="Инверсия по X" x:Name="InvertXCheckbox"/>
                        <CheckBox Content="Инверсия по Y" x:Name="InvertYCheckbox"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                            <Label Content="Сенсорная чувствительность:" Width="196"/>
                            <TextBox x:Name="SensitivityTextBox" Text="1" Width="54" TextAlignment="Center"  PreviewTextInput="SensitivityTextBox_PreviewTextInput" />
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!-- Раздел 2: Подсветка -->
                <Expander Header="Подсветка" IsExpanded="True">
                    <StackPanel Height="248">
                        <Label Content="Яркость:"/>
                        <Slider x:Name="BrightnessSlider" Minimum="0" Maximum="100" Value="50" TickFrequency="1"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <RadioButton GroupName="Languages" Name="Gradient" Content="Градиент" IsChecked="True" Width="112"/>
                            <RadioButton GroupName="Languages" Name="MonoColor" Content="Моноцвет" IsChecked="False" Width="103"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="Цвет:" Width="60" IsEnabled="{Binding ElementName=MonoColor, Path=IsChecked}"/>
                            <TextBox x:Name="ColorInputBox" Text="000.000.000" Width="114" TextAlignment="Center" IsEnabled="{Binding ElementName=MonoColor, Path=IsChecked}"  PreviewTextInput="ColorInputBox_PreviewTextInput"/>
                        </StackPanel>

                        <Label Content="Скорость изменения градиента:" IsEnabled="{Binding ElementName=Gradient, Path=IsChecked}"/>
                        <Slider x:Name="SpeedG" Minimum="0" Maximum="100" Value="50" TickFrequency="1" IsEnabled="{Binding ElementName=Gradient, Path=IsChecked}" />
                    </StackPanel>
                </Expander>

                <!-- Раздел 3: Клавиши -->
                <Expander Header="Клавиши" IsExpanded="True">
                    <StackPanel>
                        <Button Content="Изменить пароль" x:Name="ChangePasswordButton" HorizontalAlignment="Left" Style="{StaticResource DefaultButtonStyle}" />
                        <Label Content="Настройка биндов клавиш:" Margin="0,15,0,5"/>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="M1" Width="60" HorizontalAlignment="Left"/>
                            <TextBox x:Name="M1" Text="left click" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="M2" Width="60" HorizontalAlignment="Left"/>
                            <TextBox x:Name="M2" Text="right click" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="M3" Width="60" HorizontalAlignment="Left"/>
                            <TextBox x:Name="M3" Text="middle click" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="M4" Width="60" HorizontalAlignment="Left"/>
                            <TextBox x:Name="M4" Text="back" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="M5" Width="60" HorizontalAlignment="Left"/>
                            <TextBox x:Name="M5" Text="forward" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="M6" Width="60" HorizontalAlignment="Left"/>
                            <TextBox x:Name="M6" Text="Volume Up" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="M7" Width="60" HorizontalAlignment="Left"/>
                            <TextBox x:Name="M7" Text="Volume Down" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="M8" Width="60" HorizontalAlignment="Left"/>
                            <TextBox x:Name="M8" Text="Mute" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Label Content="M9" Width="60" HorizontalAlignment="Left"/>
                            <TextBox x:Name="M9" Text="Task View" Width="100" HorizontalAlignment="Left"/>
                        </StackPanel>

                    </StackPanel>
                </Expander>

            </StackPanel>
        </ScrollViewer>

    </DockPanel>

</Window>